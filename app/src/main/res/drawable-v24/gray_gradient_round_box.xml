<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/gray" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>

    <item
        android:top="1dp"
        android:bottom="1dp"
        android:right="1dp"
        android:left="1dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/white"
                android:endColor="#ecebf0"
                android:angle="270"/>
            <corners
                android:radius="2dp" />
        </shape>
    </item>

</layer-list>